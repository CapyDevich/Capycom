@model List<CpcmUser>?
<div class="container mt-3">
    <div class="row">
		@foreach (CpcmUser user in Model)
		{
			<div class="col-md-4" id="@user.CpcmUserId">
				<div class="card mb-4 shadow-sm">
					<img src="@Url.Content(@user.CpcmUserImagePath)" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Иконка пользователя" style="object-fit: none; object-position: center;">
					<div class="card-body">
						<p class="card-text">@user.CpcmUserFirstName @user.CpcmUserSecondName @user.CpcmUserAdditionalName</p>
					</div>
					<button class="btn btn-outline-success" onclick="asnwerFriendRequest('@user.CpcmUserId', true)">✓</button>
					<button class="btn btn-outline-danger" onclick="asnwerFriendRequest('@user.CpcmUserId', false)">✕</button>
				</div>
			</div>
		}
		<div class="col-12 text-center">
			<button class="btn btn-primary" type="button">Загрузить ещё</button>
		</div>
    </div>
</div>
<script src="~/js/friends.js"></script>